<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/ivUserImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="Small Text"
        android:id="@+id/tvUserHandle"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tvTweet"
        android:layout_toEndOf="@+id/tvTweet"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:text="Large Text"
        android:id="@+id/tvTweet"
        android:lines="3"
        android:ellipsize="end"
        android:layout_alignBottom="@+id/ivUserImage"
        android:layout_toRightOf="@+id/ivUserImage"
        android:layout_toEndOf="@+id/ivUserImage"
        android:layout_below="@+id/tvUserHandle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:textStyle="bold"
        android:text="Small Text"
        android:id="@+id/tvUserName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivUserImage"
        android:layout_toEndOf="@+id/ivUserImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="Small Text"
        android:id="@+id/tvTime"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ivUserImage"
        android:layout_toRightOf="@+id/ivUserImage"
        android:layout_toEndOf="@+id/ivUserImage">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/ivReply"
            android:background="@drawable/reply"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/ivUserImage"
            android:layout_toEndOf="@+id/ivUserImage"
            android:layout_marginRight="80dp"/>
        <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/ivRetweet"
        android:background="@drawable/retweet"
            android:layout_marginRight="80dp"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/ivLike"
        android:background="@drawable/like"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/tvTime"
        android:layout_toStartOf="@+id/tvTime"
        android:layout_marginRight="80dp"/>


    </LinearLayout>
</RelativeLayout>